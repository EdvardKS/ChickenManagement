# Node environment
NODE_ENV=production

# Session configuration
SESSION_SECRET=change_this_to_a_secure_random_string

# Database configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=restaurant
DATABASE_URL=postgres://postgres:change_this_to_a_secure_password@postgres:5432/restaurant

# Set port (should match the one exposed in Dockerfile and docker-compose)
PORT=5000